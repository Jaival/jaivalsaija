# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# JSON files
[*.json]
max_line_length = 200

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Package.json
[package.json]
indent_size = 2
max_line_length = 200

# Make files
[Makefile]
indent_style = tab
